<h1>Users</h1>

<table class='table table-striped'>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Member Since</th>
    <th>Levels</th>
  </tr>

<% @users.each do |user| %>
    <tr id='user-<%= user.id %>'>
    <td><%= link_to user.username, user_path(user) %></td>
    <td><%= user.name %></td>
    <td><span title='<%= user.created_at %>'><%= time_ago_in_words(user.created_at) %></span></td>
    <td><%= user.levels_count if user.levels_count > 0 %></td>
  </tr>
<% end %>
</table>
