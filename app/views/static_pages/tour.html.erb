<% @title = 'Tour' %>
<% content_for :js do %>
  <%= javascript_include_tag 'kinetic-v4.5.4.js' %>
  <%= javascript_include_tag 'electricfieldhockey.js' %>
  <%= javascript_include_tag 'underscore-1.4.4.js' %>
  <%= javascript_include_tag 'backbone.min.js' %>
  <%= javascript_include_tag 'tourist.js' %>
  <%= javascript_include_tag 'tour.js' %>
<% end %>
<h1 id='title'>Tour</h1>

<p id='toolbar'>
  <button id="stop" class='btn btn-primary'>Start</button>
  <button id='reset' onclick="sim.reset()" class='btn'>Reset</button>
</p>
<div id='playground'></div>

<div class='modal hide fade' id='win-modal'>
  <div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
    <h3>You Won!</h3>
  </div>
  <div class='modal-body'>
    <p>Congratulations! You successfully comepleted the tour.</p>
    <p>Why don't you try a sample of a more difficult level?</p>
  </div>
  <div class='modal-footer'>
    <a href='#' class='btn' data-dismiss='modal'>Close</a>
    <%= link_to 'Challenge Me!', sample_path, :class => 'btn btn-primary' %>
  </div>
  <div>
</div>

<script type='text/javascript'>
$(document).ready(function() {
  $('#stop').click(function() {
    sim.stop();
    sim.reset();
    sim.start();
  });
});
</script>
